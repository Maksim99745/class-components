{
  "name": "viterc",
  "private": false,
  "version": "2.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src/ --fix",
    "format:fix": "prettier .  --write",
    "format:all": "npm run lint:fix && npm run prettier:fix",
    "preview": "vite preview",
    "prettier": "prettier --check --ignore-unknown src/",
    "prettier:fix": "prettier --write --ignore-unknown src/",
    "types-check": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch ": "vitest",
    "prepare": "husky install",
    "validate:all": "npm run lint && npm run prettier && npm run types-check && npm run test",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.6",
    "@vitest/coverage-v8": "^2.0.4",
    "immer": "^10.1.1",
    "isomorphic-fetch": "^3.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.25.1",
    "redux-persist": "^6.0.0",
    "rollup": "^4.19.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.3",
    "@types/react-csv": "^1.1.10",
    "@types/react-dom": "^18.3.0",
    "@types/redux-mock-store": "^1.0.6",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-istanbul": "^2.0.4",
    "@vitest/ui": "^2.0.4",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-compiler": "0.0.0-experimental-0998c1e-20240625",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-unused-imports": "^3.2.0",
    "gh-pages": "^6.1.1",
    "husky": "^8.0.3",
    "jsdom": "^24.1.1",
    "msw": "^2.3.4",
    "nyc": "^17.0.0",
    "prettier": "^3.3.3",
    "redux-mock-store": "^1.5.4",
    "sass": "^1.77.8",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vite-plugin-eslint": "^1.8.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.4"
  }
}
