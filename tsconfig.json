{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true,
    "baseUrl": "./",
    "types": ["vitest/globals"],
    "paths": {
      "@core/*": ["app/src/core/*"],
      "@pages/*": ["app/src/pages/*"],
      "@components/*": ["app/src/components/*"],
      "@models/*": ["app/src/models/*"],
      "@enums/*": ["app/src/enums/*"],
      "@constants/*": ["app/src/constants/*"],
      "@utils/*": ["app/src/utils/*"],
      "@test/*": ["app/src/test/*"],
      "@store/*": ["app/src/store/*"],
      "@mocks/*": ["app/src/mocks/*"]
    }
  },
  "include": ["app/src", "tests/setup.ts", "app/src/core", "app", "app/routes/home.tsx"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
