{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "plugins": [{ "name": "next" }],
    "paths": {
      "@core/*": ["./src/core/*"],
      "@pages/*": ["./src/pages/*"],
      "@components/*": ["./src/components/*"],
      "@models/*": ["./src/models/*"],
      "@enums/*": ["./src/enums/*"],
      "@constants/*": ["./src/constants/*"],
      "@utils/*": ["./src/utils/*"],
      "@test/*": ["./src/test/*"],
      "@store/*": ["./src/store/*"],
      "@mocks/*": ["./src/mocks/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "components/**/*",
    "pages/**/*",
    "tests/setup.ts",
    "./dist/types/**/*.ts",
    "./next-env.d.ts",
    ".next/types/**/*.ts",
    "components/Main",
    "components/NotFound",
    "store"
  ],
  "exclude": ["./node_modules"]
}
